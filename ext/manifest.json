{
    "manifest_version": 3,
    "name": "AI Assistant Sidebar",
    "version": "1.0",
    "description": "Voice-enabled AI assistant in your browser sidebar",
    "permissions": [
      "sidePanel",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "side_panel": {
      "default_path": "sidebar.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Open AI Assistant"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
  }
